# .env.example
# 이 파일을 .env로 복사하여 사용하세요
# cp .env.example .env

NODE_ENV=development
PORT=3000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=ai_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# AI Provider (openai | claude | mock)
# development 환경에서는 mock 사용 권장
AI_PROVIDER=mock

# OpenAI (AI_PROVIDER=openai 일 때 필요)
# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini

# Claude (AI_PROVIDER=claude 일 때 필요)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Thread
THREAD_TIMEOUT_MINUTES=30
